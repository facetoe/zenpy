[MASTER]
load-plugins=pylint_quotes

string-quote=double-avoid-escape
triple-quote=double
docstring-quote=double

[MESSAGES CONTROL]
disable=
    abstract-method,
    bad-continuation,
    chained-comparison,  # R1716: Simplify chained comparison between the operands
    duplicate-code,
    fixme,
    invalid-name,
    len-as-condition,
    missing-docstring,
    no-else-return,
    no-else-raise,
    no-self-use,
    superfluous-parens,
    too-few-public-methods,
    too-many-ancestors,
    too-many-arguments,
    too-many-boolean-expressions,
    too-many-branches,
    too-many-instance-attributes,
    too-many-lines,
    too-many-locals,
    too-many-nested-blocks,
    too-many-public-methods,
    too-many-statements,
    ungrouped-imports,
    unused-argument,
    wrong-import-order,
    line-too-long,
    no-else-continue,
    no-else-break,
    import-outside-toplevel

[FORMAT]
max-line-length=125

[REPORTS]
output-format=text
reports=no
score=no

[TYPECHECK]
ignored-classes=PurePath,responses
extension-pkg-whitelist=cassandra.cluster,cassandra.metadata,cassandra.query

